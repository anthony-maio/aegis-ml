@dataclass
class TrainingConfig:
    """Training configuration derived from TrainingSpec."""

    model_name: str = "{{ spec.model_name }}"
    dataset_path: str = "{{ spec.dataset_path }}"
    method: str = "{{ spec.method }}"
    num_epochs: int = {{ spec.num_epochs }}
    micro_batch_size: int = {{ spec.micro_batch_size }}
    gradient_accumulation_steps: int = {{ spec.gradient_accumulation_steps }}
    learning_rate: float = {{ spec.learning_rate }}
    seq_len: int = {{ spec.seq_len }}
    target_gpu: str = "{{ spec.target_gpu }}"
    streaming: bool = {{ spec.streaming }}
    max_steps: int = {{ spec.max_steps }}
    trust_remote_code: bool = {{ spec.trust_remote_code }}


{% if spec.method in ("lora", "qlora") %}
def setup_lora(model):
    """Apply LoRA adapters to the model."""
    lora_config = LoraConfig(
        r=16,
        lora_alpha=32,
        target_modules=["q_proj", "v_proj", "k_proj", "o_proj"],
        lora_dropout=0.05,
        bias="none",
        task_type=TaskType.CAUSAL_LM,
    )
    model = get_peft_model(model, lora_config)
    model.print_trainable_parameters()
    return model


{% endif %}
def train():
    """Run the training pipeline."""
    config = TrainingConfig()

    # Load tokenizer
    tokenizer = AutoTokenizer.from_pretrained(
        config.model_name,
        trust_remote_code=config.trust_remote_code,
    )
    if tokenizer.pad_token is None:
        tokenizer.pad_token = tokenizer.eos_token

{% if spec.method == "qlora" %}
    # Quantization config for QLoRA
    bnb_config = BitsAndBytesConfig(
        load_in_4bit=True,
        bnb_4bit_quant_type="nf4",
        bnb_4bit_use_double_quant=True,
        bnb_4bit_compute_dtype="float16",
    )
    model = AutoModelForCausalLM.from_pretrained(
        config.model_name,
        quantization_config=bnb_config,
        device_map="auto",
        trust_remote_code=config.trust_remote_code,
    )
{% else %}
    # Load model
    model = AutoModelForCausalLM.from_pretrained(
        config.model_name,
        device_map="auto",
        trust_remote_code=config.trust_remote_code,
    )
{% endif %}
{% if spec.method in ("lora", "qlora") %}

    # Apply LoRA adapters
    model = setup_lora(model)
{% endif %}

    # Load dataset
{% if spec.streaming %}
    # Streaming mode for large Hub datasets
    dataset = load_dataset(
        config.dataset_path,
        split="train",
        streaming=True,
        trust_remote_code=True,
    )
{% else %}
{% set is_local = spec.dataset_path.startswith('./') or spec.dataset_path.startswith('/') or spec.dataset_path.endswith(('.jsonl', '.json', '.csv', '.parquet', '.txt')) %}
{% if not is_local and '/' in spec.dataset_path %}
    # HuggingFace Hub dataset
    dataset = load_dataset(config.dataset_path, split="train", trust_remote_code=True)
{% else %}
    # Local file dataset
    dataset = load_dataset("json", data_files=config.dataset_path, split="train")
{% endif %}
{% endif %}

    # Tokenize
    def tokenize_fn(examples):
        # Auto-detect text column
        text_col = None
        for col in ["text", "content", "prompt", "instruction"]:
            if col in examples:
                text_col = col
                break
        if text_col is None:
            text_col = list(examples.keys())[0]
        return tokenizer(
            examples[text_col],
            truncation=True,
            max_length=config.seq_len,
            padding="max_length",
        )

{% if spec.streaming %}
    # IterableDataset: must peek at first batch for column names
    first_batch = next(iter(dataset))
    col_names = list(first_batch.keys())
    tokenized_dataset = dataset.map(tokenize_fn, batched=True, remove_columns=col_names)
{% else %}
    tokenized_dataset = dataset.map(tokenize_fn, batched=True, remove_columns=dataset.column_names)
{% endif %}

    # Data collator
    data_collator = DataCollatorForLanguageModeling(tokenizer=tokenizer, mlm=False)

    # Training arguments
    training_args = TrainingArguments(
        output_dir="./output/{{ spec.model_name.split('/')[-1] }}-{{ spec.method }}",
{% if spec.max_steps > 0 %}
        max_steps=config.max_steps,
{% else %}
        num_train_epochs=config.num_epochs,
{% endif %}
        per_device_train_batch_size=config.micro_batch_size,
        gradient_accumulation_steps=config.gradient_accumulation_steps,
        learning_rate=config.learning_rate,
        logging_steps=10,
{% if spec.max_steps > 0 %}
        save_steps=min(config.max_steps // 3, 1000),
{% else %}
        save_strategy="epoch",
{% endif %}
        fp16=True,
        report_to="none",
        warmup_steps=100,
    )

    # Initialize Trainer
    trainer = Trainer(
        model=model,
        args=training_args,
        train_dataset=tokenized_dataset,
        data_collator=data_collator,
    )

    # Train
    start_time = time.time()
    train_output = trainer.train()
    duration_sec = time.time() - start_time

    # Save final model
    trainer.save_model()
    tokenizer.save_pretrained(training_args.output_dir)
    print(f"Model saved to {training_args.output_dir}")

    # Emit parseable metrics for Aegis orchestrator
    final_metrics = {
        "train_loss": train_output.training_loss,
    }
    if trainer.state.log_history:
        final_metrics.update(
            {k: v for k, v in trainer.state.log_history[-1].items() if "loss" in k}
        )
    print(f"AEGIS_METRICS:{json.dumps(final_metrics)}")
    print(f"AEGIS_DURATION:{duration_sec:.1f}")


def main():
    """Entry point for the training script."""
    train()


if __name__ == "__main__":
    main()
